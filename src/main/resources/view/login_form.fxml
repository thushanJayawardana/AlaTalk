            <Image url="@../img/alatalk-high-resolution-logo-transparent.png" />
         </image>
      </ImageView>
      <Label layoutX="244.0" layoutY="64.0" text="Login">
         <font>
            <Font name="Ubuntu Bold" size="48.0" />
         </font>
      </Label>
